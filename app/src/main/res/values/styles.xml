<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBGLight</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="separatorHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:alpha">.1</item>
        <item name="android:background">@color/colorBG</item>
    </style>

    <style name="AppBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp48</item>
        <item name="android:layout_marginTop">@dimen/dp16</item>
        <item name="android:layout_marginBottom">@dimen/dp16</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:text">@string/save</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TabItemTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppBtnDark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp48</item>
        <item name="android:layout_marginLeft">@dimen/dp16</item>
        <item name="android:layout_marginRight">@dimen/dp16</item>
        <item name="android:layout_marginTop">@dimen/dp16</item>
        <item name="android:layout_marginBottom">@dimen/dp16</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:text">@string/save</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="BookingDetailsTag">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dp4</item>
        <item name="android:paddingTop">@dimen/dp4</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:paddingRight">@dimen/dp4</item>
    </style>

    <style name="BookingDetailsValue">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dp4</item>
        <item name="android:paddingRight">@dimen/dp4</item>
        <item name="android:paddingBottom">@dimen/dp12</item>
        <item name="android:textSize">@dimen/sp18</item>
    </style>

</resources>
